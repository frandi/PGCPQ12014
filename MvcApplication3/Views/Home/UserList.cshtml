@model List<MvcApplication3.Models.Person>
@{
    ViewBag.Title = "UserList";
}

@using (Html.BeginForm())
{
    <div>
        <input type="text" name="term" />
        <input type="submit" value="Filter" />
    </div>    
}


<div class="message">@ViewBag.Message</div>
@Html.ActionLink("Add User", "AddUser")
<ul>
    @foreach (var user in Model)
    {
        <li>
            @Html.ActionLink(user.Username, "ViewUser", new { id = user.PersonId })
            @Html.ActionLink("Edit", "EditUser", new { id = user.PersonId })
            @Html.ActionLink("Delete", "DeleteUser", new { id = user.PersonId })
        </li>
    }
</ul>
